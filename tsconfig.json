{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": false,
        "outDir": "./lib",
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
